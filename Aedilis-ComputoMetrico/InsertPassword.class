' Gambas class file

PUBLIC save AS Boolean

PUBLIC SUB Form_Close()
IF ((ComputoMetrico.password = "") AND (save = FALSE)) THEN ComputoMetrico.password = "###NONE###"

END

PUBLIC SUB Button1_Click()

  IF (pass.text = conferma.text) THEN 
     IF NOT (pass.Text = "") THEN 
          ComputoMetrico.password = pass.Text
          IF (save = TRUE) THEN ComputoMetrico.SalvaCriptato_click()
          ME.Hide
     ELSE 
          Message.warning("Hai inserito una password vuota.")
     END IF
  ELSE 
     Message.warning("I due campi non sono uguali!")
  END IF


END

PUBLIC SUB Form_Open()

  ME.Center

END
